<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        app:cardCornerRadius="4dp"
        android:id="@+id/heroCardContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_id"
        android:text="This is one"
        android:translationZ="99dp"
        android:textColor="@color/Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/heroCardContainer"
        app:layout_constraintTop_toTopOf="@id/heroCardContainer"
        app:layout_constraintRight_toRightOf="@id/heroCardContainer"
        app:layout_constraintLeft_toLeftOf="@id/heroCardContainer"
        />


</androidx.constraintlayout.widget.ConstraintLayout>